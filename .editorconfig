# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.php]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false
indent_style = space

[{babelrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_size = 2
indent_style = space

[{composer.lock,composer.json}]
indent_size = 4
indent_style = space
